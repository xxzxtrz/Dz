#include <iostream>

using namespace std;

//Задание 1. Цельсии, Фаренгейты 

int main()
{	
	setlocale(0, "");

	int start;
	int end;

	double f;

	cout << "Диапазон от и до: ";
	cin >> start;
	cin >> end;
	while (start <= end)
	{
		f = (start * 1.8) + 32;
		cout << start << "\t" << f << "\n";
		start++;
	}

	//Задание 2. Круговорот чисел в природе

	setlocale(0, "");

	int num;
	int nummm;

	cout <<"Введите число  : ";
	cin >> num;

	nummm = num;

		while (nummm != 0)
		{
			if (num % nummm == 0)
			{
				cout << nummm << " ";
			}
			nummm--;
		}

	//Задание 3. Как на экран

	setlocale(0, "");

	int num, tmp, rn = 0;

	cout << "Enter a number ";
	cin >> num;

		while (num != 0)
		{
			tmp = num % 10;
			rn = rn * 10 + tmp;
			num /= 10;
		}
		setlocale(0, "");
		cout << "Reverse number " << rn << "\n";
}


// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

